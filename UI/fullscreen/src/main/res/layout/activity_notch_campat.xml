<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:background="@mipmap/preview"
            android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <RelativeLayout
                android:id="@+id/topView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <Button
                    android:layout_width="wrap_content"
                    android:text="Left Button"
                    android:textAllCaps="false"
                    android:layout_alignParentStart="true"
                    android:layout_height="wrap_content"/>

            <Button
                    android:layout_width="wrap_content"
                    android:text="Center Button"
                    android:textAllCaps="false"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"/>

            <Button
                    android:layout_width="wrap_content"
                    android:text="Right Button"
                    android:textAllCaps="false"
                    android:layout_alignParentEnd="true"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>

        <Button
                android:id="@+id/btnWindowFlag"
                android:layout_marginTop="100dp"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Use Window FullScreen"
                android:textAllCaps="false"
                android:layout_height="match_parent"/>

        <Button
                android:id="@+id/btnWindowVisibility"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Use Window Visibility"
                android:textAllCaps="false"
                android:layout_height="match_parent"/>

        <Button
                android:id="@+id/btnWindowVisibilityHideStatusbar"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Use Window Visibility With hide StatusBar"
                android:textAllCaps="false"
                android:layout_height="match_parent"/>
    </LinearLayout>
    x
</ScrollView>