<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FullPreviewImage">
    <androidx.appcompat.widget.AppCompatImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/imgPreview" android:layout_width="match_parent" android:layout_height="match_parent"
            android:background="@mipmap/preview"/>
    <RelativeLayout
            android:id="@+id/topView"
            android:background="#80000000"
            app:layout_constraintTop_toTopOf="parent" android:layout_width="match_parent"
            android:gravity="bottom"
                    android:layout_height="69dp">
        <androidx.appcompat.widget.AppCompatImageView android:layout_width="wrap_content"
                                                      android:layout_height="45dp"
                                                      android:id="@+id/back"
                                                      android:src="@android:drawable/ic_menu_day"/>
        <androidx.appcompat.widget.AppCompatTextView android:layout_width="wrap_content"
                                                     android:id="@+id/title"
                                                     android:text="Full Screen"
                                                     android:gravity="center"
                                                     android:textColor="@android:color/white"
                                                     android:layout_centerHorizontal="true"
                                                     android:layout_height="45dp"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>